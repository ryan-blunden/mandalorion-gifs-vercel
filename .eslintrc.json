{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "globals": {
    "fetch": "readonly"
  },
  "extends": [
    "airbnb-base",
    "next"
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "max-classes-per-file": [
      "error",
      2
    ],
    "semi": [
      "error",
      "never"
    ],
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "always",
        "objects": "ignore",
        "functions": "never"
      }
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "no-console": "off",
    "import/no-anonymous-default-export": [
      "error",
      {
        "allowObject": true
      }
    ],
    "@next/next/no-img-element": "off"
  }
}